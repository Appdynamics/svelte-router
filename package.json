{
  "name": "@bjornlu/svelte-router",
  "description": "Simple router for Svelte",
  "version": "0.2.1",
  "main": "dist/svelte-router.umd.js",
  "module": "dist/index.js",
  "svelte": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "author": {
    "name": "Bjorn Lu",
    "url": "https://bjornlu.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/bluwy/svelte-router",
  "repository": {
    "type": "git",
    "url": "https://github.com/bluwy/svelte-router.git"
  },
  "bugs": {
    "url": "https://github.com/bluwy/svelte-router/issues"
  },
  "keywords": [
    "svelte",
    "router"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn build:tsc && yarn build:copy && yarn build:bundle",
    "build:tsc": "tsc",
    "build:copy": "node ./scripts/copy-svelte.js",
    "build:bundle": "rollup -c",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "jest",
    "test:e2e": "server-test 'yarn cy:setup' '10001|10002|10003' 'yarn cy:run'",
    "cy:setup": "rollup -c cypress/test-app/rollup.config.js",
    "cy:open": "cypress open",
    "cy:run": "cypress run --headless",
    "lint": "prettier --check '**/*.{js,ts,svelte,md}'",
    "format": "prettier --write '**/*.{js,ts,svelte,md}'",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "peerDependencies": {
    "svelte": "^3.20.0"
  },
  "dependencies": {
    "regexparam": "^1.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/jest": "^26.0.13",
    "cypress": "^5.1.0",
    "jest": "^26.4.2",
    "jest-transform-stub": "^2.0.0",
    "prettier": "^2.1.1",
    "prettier-plugin-svelte": "^1.2.1",
    "rollup": "^2.26.10",
    "rollup-plugin-serve": "1.0.2",
    "rollup-plugin-svelte": "^6.0.0",
    "start-server-and-test": "^1.11.3",
    "svelte": "^3.24.1",
    "svelte-preprocess": "^4.2.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  }
}