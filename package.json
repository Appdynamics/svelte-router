{
  "name": "@bjornlu/svelte-router",
  "description": "Simple vue-like router",
  "version": "1.0.0",
  "main": "dist/svelte-router.umd.js",
  "module": "dist/index.js",
  "svelte": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "author": {
    "name": "Bjorn Lu",
    "url": "https://bjornlu.com"
  },
  "license": "MIT",
  "keywords": [
    "svelte",
    "router"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn build:tsc && yarn build:copy && yarn build:bundle",
    "build:tsc": "tsc",
    "build:copy": "node ./scripts/copy-svelte.js",
    "build:bundle": "rollup -c",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "TS_NODE_PROJECT=./tests/tsconfig.json mocha",
    "test:e2e": "server-test 'yarn cy:setup' '10001|10002' 'yarn cy:run'",
    "cy:setup": "rollup -c tests/test-app/rollup.config.js",
    "cy:open": "cypress open",
    "cy:run": "cypress run --headless",
    "format": "prettier --write '**/*.{js,ts,svelte,md}'",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "peerDependencies": {
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "regexparam": "^1.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^8.0.0",
    "chai": "^4.2.0",
    "cypress": "^4.10.0",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "rollup": "^2.21.0",
    "rollup-plugin-serve": "^1.0.2",
    "rollup-plugin-svelte": "^5.2.3",
    "start-server-and-test": "^1.11.3",
    "svelte": "^3.24.0",
    "svelte-preprocess": "^4.0.8",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.6"
  }
}
